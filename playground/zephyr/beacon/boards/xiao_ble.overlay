/* Use the single port interrupt with the sense mechanism for all gpio pin interrupts */

&i2c0 {
	status = "okay";
};

&gpio0 {
	status = "okay";
	sense-edge-mask = < 0xffffffff >;
};

&uart0 {
    status = "disabled";
};

&uart1 {
    status = "disabled";
};

&spi0 {
    status = "disabled";
};

&spi1 {
    status = "disabled";
};

&adc {
    status = "disabled";
};

&spi2 {
	status = "disabled";
};

&spi3 {
	status = "disabled";
};

&qspi {
	status = "disabled";
};

